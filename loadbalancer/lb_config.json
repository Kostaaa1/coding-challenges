  "rate_limiter_enabled": true,
  "rate_limit_tokens": 10,
  "rate_limit_interval_seconds": 1,
  "servers": [
    {
      "name": "server1",
      "url": "http://172.27.179.12:8081",
      "health_url": "/health",
      "weight": 1
    },
    {
      "name": "server2",
      "url": "http://172.27.179.12:8082",
      "health_url": "/health",
      "weight": 2
    },
    {
      "name": "server3",
      "url": "http://172.27.179.12:8083",
      "health_url": "/health",
      "weight": 5
    }
  ],
  "tls_enabled": true,
  "tls_cert_file": "/path/to/cert.pem",
  "tls_key_file": "/path/to/key.pem"
}
